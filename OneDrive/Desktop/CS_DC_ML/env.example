# AI-Powered Secure Load Balancer Environment Configuration
# Copy this file to .env and modify as needed

# Load Balancer Configuration
LB_HOST=0.0.0.0
LB_PORT=8000
ENABLE_AI_SECURITY=true
BLOCK_MALICIOUS_REQUESTS=true
MODEL_CONFIDENCE_THRESHOLD=0.7
LB_ALGORITHM=least_connections
HEALTH_CHECK_INTERVAL=30

# Database Configuration
DB_TYPE=sqlite
SQLITE_DB_PATH=/app/logs/load_balancer.db

# AI Model Configuration
MODEL_DIR=/app/models
DATA_DIR=/app/data
LOGS_DIR=/app/logs

# Backend Server Configuration
SERVER_1_PORT=8001
SERVER_2_PORT=8002
SERVER_3_PORT=8003

# Dashboard Configuration
DASHBOARD_PORT=5000
DB_PATH=/app/logs/load_balancer.db

# Traffic Generator Configuration
LOAD_BALANCER_URL=http://load-balancer:8000
TRAFFIC_RATE=10
TRAFFIC_DURATION=60

# Nginx Configuration (Production)
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security Configuration
CORS_ORIGINS=*
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization

# Performance Configuration
MAX_CONNECTIONS=1000
CONNECTION_TIMEOUT=30
READ_TIMEOUT=60
WRITE_TIMEOUT=60

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_ENABLED=true
